{
  "name": "create-typescript-from-avro",
  "version": "0.2.0",
  "description": "TypeSript code generator for Apache Avro types",
  "main": "./dist/index.js",
  "bin": {
    "avro-to-ts": "./dist/cli.js"
  },
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "rollup -c rollup.main.config.js",
    "test": "mocha -r ts-node/register test/*.spec.ts",
    "tslint": "tslint -c tslint.json 'src/**/*.ts'",
    "on-sample": "npm run build && node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fredfort/avro-typescript.git"
  },
  "readme": "READMD.md",
  "types": "./dist/index.d.ts",
  "keywords": [
    "avro",
    "typescript"
  ],
  "author": "Fred Fort",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/fredfort/avro-typescript/issues"
  },
  "homepage": "https://github.com/fredfort/avro-typescript#readme",
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/lodash": "^4.14.116",
    "@types/minimist": "^1.2.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^7.0.69",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "rollup": "^0.65.0",
    "rollup-plugin-typescript2": "^0.17.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1"
  },
  "dependencies": {
    "@loopback/openapi-v3-types": "^1.0.0",
    "constant-case": "^2.0.0",
    "lodash": "^4.17.11",
    "minimist": "^1.2.0",
    "pascalcase": "^0.1.1",
    "prettier": "^1.14.2"
  }
}
